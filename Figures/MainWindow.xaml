<Window x:Class="Figures.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Figures"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <Window.Resources>
        <Style x:Key="Triangle1" TargetType="Polygon">
            <Setter Property="Points" Value="200,300,400,100,600,300"/>
            <Setter Property="Fill" Value="Aquamarine"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter Property="Points" Value="200,300,275,225,200,150,350,150,400,100,450,150,600,150,525,225,600,300,450,300,400,350,350,300"/>
                    <Setter Property="Fill" Value="Red"/>
                </Trigger>
            </Style.Triggers>

        </Style>
    </Window.Resources>
    <Grid>
        <Polygon Style="{StaticResource ResourceKey=Triangle1}" Stroke="Black" StrokeThickness="5"
                 
                 />

    </Grid>
</Window>
